$(function(){

      $('.achievements-slider').royalSlider({
        arrowsNav: true,
        loop: false,
        keyboardNavEnabled: true,
        controlsInside: false,
        arrowsNavAutoHide: false,
        controlNavigation: 'bullets',
        thumbsFitInViewport: false,
        navigateByClick: true,
        startSlideId: 0,
        autoPlay: true,
        transitionType:'move'
      });
});

window.onYouTubePlayerAPIReady = function() {
   new YT.Player('hero-yt-player', {
    //  height: '390',
    //   width: '640',
      playerVars: {
        'autoplay': 1,
        'autohide': 1,
        'cc_load_policy' : 0,
        'controls': 0,
        'disablekb':1,
        'fs':0,
        'loop':1,
        'rel' : 0,
        'showinfo': 0,
        'start':50
      },
      events: {
        onReady : function() {
            event.target.loadVideoByUrl($('#hero-yt-player').attr('data-video-url'), 40);
            event.target.mute();
        }
      }
    });
 };
